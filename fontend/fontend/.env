# ==============================================
# Alumni Registration System - Environment Variables
# ==============================================

# API Configuration
VITE_API_URL=http://localhost:5500
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="ระบบลงทะเบียนศิษย์เก่า"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Alumni Registration System for วิทยาลัยอาชีวศึกษาอุดรธานี"

# Environment
VITE_ENV=development
NODE_ENV=development

# College Information
VITE_COLLEGE_NAME="วิทยาลัยอาชีวศึกษาอุดรธานี"
VITE_COLLEGE_NAME_EN="Udon Thani Vocational College"

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/jpg,image/png,application/pdf"

# Payment Configuration
VITE_MEMBERSHIP_FEE=200
VITE_SHIPPING_FEE=50
VITE_BANK_NAME="ธนาคารกรุงไทย"
VITE_BANK_ACCOUNT="443-3-40313-5"
VITE_BANK_ACCOUNT_NAME="น.ส.ชุติภัทร ชวาลไชย และ นางระพีพรรณ จันทรสา"

